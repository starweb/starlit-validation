{
    "name": "starlit/validation",
    "type": "library",
    "description": "A simple data validator.",
    "keywords": ["validation", "validator"],
    "homepage": "http://github.com/starweb/starlit-validation",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Starweb AB"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "symfony/translation": "^3.0"
    },
    "autoload": {
      "psr-4": { "Starlit\\Validation\\": "src" }
    },
    "suggest": {
        "symfony/translation": "Allow translation of validator error messages"
    }
}
